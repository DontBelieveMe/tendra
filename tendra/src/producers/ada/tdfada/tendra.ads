package TenDRA is
   pragma Pure;

   type Byte is mod 2 ** 8;
   for Byte'Size use 8;

   type Word is mod 2 ** 32;
   for Word'Size use 32;

   type Small is range 0 .. 2 ** 30 - 1;

   type    Bit_Count is range 0 .. 32;
   subtype Bit_Index is Bit_Count range 1 .. Bit_Count'Last;

   procedure Inc (Count : in out Small);
   pragma Inline (Inc);

end TenDRA;


