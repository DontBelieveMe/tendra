/*
    LEXICAL ANALYSER FOR LEXI

    This file describes the lexical analyser used by lexi.
*/

COPYRIGHT = "COPYING";

/*Actions*/
ACTION <init_token_buffer> ;
ACTION <push_token_buffer> : (:CHARACTER) -> ();
ACTION <finalize_token_buffer> ;
ACTION <E_eof_in_string>;
ACTION <E_newline_in_string>;

ACTION <get_identifier> : (:CHARACTER) -> (:TERMINAL);
ACTION <get_sid_identifier> : (:CHARACTER) -> (:TERMINAL);
ACTION <read_arg_char_nb>: (:CHARACTER) -> (:TERMINAL);

/* Character groups */
GROUP white = " \t\n\r" ;
GROUP alpha = {A-Z} + {a-z} + "_" ;
GROUP digit = {0-9} ;
GROUP alphanum = "[alpha][digit]" ;

/* Simple symbols */
TOKEN "(" -> $open ;
TOKEN ")" -> $close ;
TOKEN "<" -> $begin-action ;
TOKEN ">" -> $end-action ;
TOKEN "{" -> $open-brace ;
TOKEN "}" -> $close-brace ;
TOKEN "->" -> $arrow ;
TOKEN ":" -> $colon ;
TOKEN "&" -> $reference ;
TOKEN ";" -> $semicolon ;
TOKEN "=" -> $equal ;
TOKEN "+" -> $plus ;
TOKEN "..." -> $range ;
TOKEN "\[...]" -> $range-closed-closed ;
TOKEN "\[...)" -> $range-closed-open ;
TOKEN "$$" -> $nothing-marker ;
TOKEN ","  -> $comma ;
TOKEN "\e" -> $eof ;
TOKEN "##"       -> $arg-char-list ;
TOKEN "#n"       -> $arg-nb-of-chars ;
TOKEN "#*"       -> $arg-char-string ;
TOKEN "#[digit]" -> $ = <read_arg_char_nb>(#1);
TOKEN "#$" -> $arg-char-void; /* Temporary to preserve backward compatibility
      	      		      for a small amount of time */

/* Special strings */
TOKEN "{A-Z}" -> $upper ;
TOKEN "{a-z}" -> $lower ;
TOKEN "{0-9}" -> $digit ;

/* Comments, strings and identifiers */
ZONE comment : "/*" ... "*/" {
	GROUP white = "";
	TOKEN DEFAULT -> $$;
}

ZONE line_comment : "//" ... "\n" {
        GROUP white = "";
        TOKEN DEFAULT -> $$;
}


//TOKEN "\"" -> $ = <get_string> () ;

ZONE stringzone : "\"" ->  <init_token_buffer>... "\"" -> <finalize_token_buffer>, $string {
     	GROUP white = "";
	TOKEN DEFAULT -> <push_token_buffer>(#0);
	TOKEN "\\\"" -> <push_token_buffer>(#1);
	TOKEN "\e" -> <E_eof_in_string>;
	TOKEN "\n" -> <E_newline_in_string>;
}


TOKEN "[alpha]" -> $ = <get_identifier> (#0) ;
TOKEN "$[alpha]" -> $ = <get_sid_identifier> (#1) ;

TOKEN "$" -> $arg-return-terminal ;
TOKEN "!" -> $arg-ignore ;


/* Keywords */
KEYWORD "TYPE" -> $type-kw ;
KEYWORD "GROUP" -> $group ;
KEYWORD "ACTION" -> $action-kw ;
KEYWORD "KEYWORD" -> $keyword ;
KEYWORD "ZONE" -> $zone ;
KEYWORD "DEFAULT" -> $default ;
KEYWORD "MAPPING" -> $mapping ;
KEYWORD "TOKEN" -> $token ;
KEYWORD "white" -> $white ;
KEYWORD "IF" -> $if ;
KEYWORD "ELSE" -> $else ;
KEYWORD "COPYRIGHT" -> $copyright ;
