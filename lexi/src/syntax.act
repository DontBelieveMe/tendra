%actions%


/*
    CONCATENATE TWO STRINGS

    This action concatenates two strings.
*/

<string-concat> : ( a : STRING, b : STRING ) -> ( s : STRING ) = @{
    @s = xstrcat ( @a, @b ) ;
@} ;

/*
    CREATE A NULL IDENTIFIER

    This action creates a NULL IDENTIFIER
*/

/*
