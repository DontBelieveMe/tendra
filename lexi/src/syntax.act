/* 
   CREATES A NULL ARG LIST
*/
<null-args-list> : () -> ( l:ARGS_LIST ) = @{
    @l = NULL ;
@};

/*
    ADD INSTRUCTION to INSTRUCTION LIST 
*/
<add-inst-to-list> : ( i : INSTRUCTION, il : INSTRUCTIONS_LIST ) -> () = @{
	if(@i!=NULL) { // if @i == NULL, an error has already been issued.
		if((@il->head !=NULL) && (@i->type==return_terminal || @i->type==do_nothing)) {
			error(ERROR_SERIOUS, "A $sid-identifier or a $$ can only appear at the end of an arg-list"); 
		}
		@i->next=@il->head;
		@il->head=@i;
	}
@};

