/*
    LEXICAL ANALYSER FOR LEXI

    This file describes the lexical analyser used by lexi.
*/

/* Character groups */
GROUP white = " \t\n\r" ;
GROUP alpha = {A-Z} + {a-z} + "_" ;
GROUP digit = {0-9} ;
GROUP alphanum = "[alpha][digit]" ;

/* Simple symbols */
TOKEN "(" -> $open ;
TOKEN ")" -> $close ;
TOKEN "{" -> $open-brace ;
TOKEN "}" -> $close-brace ;
TOKEN "->" -> $arrow ;
TOKEN ":" -> $colon ;
TOKEN ";" -> $semicolon ;
TOKEN "=" -> $equal ;
TOKEN "+" -> $plus ;
TOKEN "..." -> $range ;
TOKEN "$$" -> $nothing-marker ;
TOKEN ","  -> $comma ;
TOKEN "\e" -> $eof ;
TOKEN "##"       -> $arg-char-list ;
TOKEN "#*"       -> $arg-char-string ;
TOKEN "#[digit]" -> read_arg_char_nb(##);
TOKEN "#$" -> $arg-char-void; /* Temporary to preserve backward compatibility
      	      		      for a small amount of time */

/* Special strings */
TOKEN "{A-Z}" -> $upper ;
TOKEN "{a-z}" -> $lower ;
TOKEN "{0-9}" -> $digit ;

/* Comments, strings and identifiers */
TOKEN "/*" -> get_comment (##) ;
TOKEN "\"" -> get_string (##) ;
TOKEN "[alpha]" -> get_identifier (##) ;
TOKEN "$[alpha]" -> get_sid_ident (##) ;

/* Keywords */
KEYWORD "GROUP" -> $group ;
KEYWORD "KEYWORD" -> $keyword ;
KEYWORD "ZONE" -> $zone ;
KEYWORD "DEFAULT" -> $default ;
KEYWORD "MAPPING" -> $mapping ;
KEYWORD "TOKEN" -> $token ;
KEYWORD "white" -> $white ;
KEYWORD "IF" -> $if ;
KEYWORD "ELSE" -> $else ;
