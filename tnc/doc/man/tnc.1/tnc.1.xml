	<refnamediv id='name'>
		<refname>tnc</refname>
		<refpurpose>TDF notation compiler</refpurpose>
	</refnamediv>

	<refsynopsisdiv id='synopsis'>
		<cmdsynopsis>
			<command>tnc</command>

			<group choice="opt">
				<arg choice="plain"><option>-r</option></arg>
				<arg choice="plain"><option>-read</option></arg>
				<arg choice="plain"><option>-d</option></arg>
				<arg choice="plain"><option>-decode</option></arg>
			</group>
			<group choice="opt">
				<arg choice="plain"><option>-w</option></arg>
				<arg choice="plain"><option>-write</option></arg>
				<arg choice="plain"><option>-e</option></arg>
				<arg choice="plain"><option>-encode</option></arg>
			</group>
			<arg choice="opt"><option>-I</option><replaceable>dir</replaceable></arg>

			<sbr/>

			<xi:include xpointer="xpointer(//synopfragment[@id = 'options']/*)"/>

			<sbr/>

			<arg choice="plain"><replaceable>input-file</replaceable></arg>
			<arg choice="opt"><replaceable>output-file</replaceable></arg>
		</cmdsynopsis>

		<cmdsynopsis>
			<command>tnc</command>

			<group choice="req">
				<arg choice="plain"><option>-p</option></arg>
